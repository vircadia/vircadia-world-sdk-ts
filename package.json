{
    "name": "@vircadia/world-sdk",
    "type": "module",
    "version": "0.0.4",
    "description": "Vircadia World SDK for TypeScript (Browser) (Bun coming soon)",
    "license": "Apache-2.0",
    "author": "Vircadia",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/vircadia/vircadia-world.git"
    },
    "files": [
        "./browser/dist",
        "README.md"
    ],
    "publishConfig": {
        "access": "public"
    },
    "exports": {
        "./browser/vue": {
            "import": "./browser/dist/browser/src/index.browser.vue.js",
            "types": "./browser/dist/types/browser/src/index.browser.vue.d.ts"
        }
    },
    "sideEffects": false,
    "dependencies": {
        "@vueuse/core": "catalog:vue",
        "eight-colors": "catalog:utils",
        "jsonwebtoken": "catalog:",
        "lodash-es": "catalog:utils",
        "postgres": "catalog:",
        "tmp": "catalog:utils",
        "typescript": "catalog:",
        "vue": "catalog:vue",
        "zod": "catalog:",
        "idb": "catalog:utils"
    },
    "devDependencies": {
        "@types/jsonwebtoken": "catalog:types",
        "@types/lodash-es": "catalog:types",
        "@types/node": "catalog:types",
        "@types/tmp": "catalog:types",
        "bun-types": "catalog:types"
    },
    "scripts": {
        "build": "bun run clean && bun run build:browser:vue",
        "pack": "cd package && npm pack ../",
        "clean": "rm -rf ./browser/dist",
        "build:browser:vue": "tsc --build ./browser/tsconfig.browser.vue.json && bun run copy:browser:assets",
        "copy:browser:assets": "mkdir -p ./browser/dist/browser/src/toolkit/babylon-holographic-ui/font && cp -r ./browser/src/toolkit/babylon-holographic-ui/font/* ./browser/dist/browser/src/toolkit/babylon-holographic-ui/font/",
        "prepublishOnly": "bun run build"
    }
}