{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "strict": true,
        "declaration": true,
        "declarationDir": "dist",
        "outDir": "dist",
        "skipLibCheck": true,
        "sourceMap": true,
        "removeComments": false,
        "isolatedModules": true,
        "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
