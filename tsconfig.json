        "moduleResolution": "bundler",
        "lib": ["DOM", "ESNext"],
        "jsx": "react",
        "outDir": "dist",
        "types": [
            "bun-types",
            "@types/node",
            "@types/jsonwebtoken",
            "@types/three"
