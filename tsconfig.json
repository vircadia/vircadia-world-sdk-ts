{
    "compilerOptions": {
        "rootDir": "./src",
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "composite": true,
        "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo",
        "paths": {
            "@/*": ["./src/*"]
        },
        "lib": ["DOM", "ESNext"]
    },
    "include": [
        "src/**/*",
        "src/server/config/vircadia.server.config.ts",
        "src/server/config/vircadia.server.consts.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "src/**/*.browser.ts",
        "src/**/*.bun.ts"
    ],
    "references": [
        { "path": "./tsconfig.browser.json" },
        { "path": "./tsconfig.bun.json" }
    ]
}
